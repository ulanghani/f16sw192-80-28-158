<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sakhicomputer.mrnetwork.MainActivity"
    android:background="@mipmap/bbbb">

    <TextView
        android:id="@+id/textview"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="MR. NETWORK"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_centerHorizontal="true"
        >

    <ImageView
        android:id="@+id/im_u"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textview"
        android:src="@drawable/uuuu"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/im_m"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textview"
        android:layout_toRightOf="@+id/im_u"
        android:src="@drawable/mobilink"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview"
        android:layout_marginBottom="13dp"
        android:layout_centerHorizontal="true">

    <ImageView
        android:id="@+id/im_t"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textview"
        android:src="@drawable/telenor_logo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/im_z"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textview"
        android:layout_toRightOf="@+id/im_m"
        android:src="@drawable/zonglogo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    </LinearLayout>
</RelativeLayout>
